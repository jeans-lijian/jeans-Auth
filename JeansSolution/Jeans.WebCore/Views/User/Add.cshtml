@model Jeans.WebCore.ViewModels.Account.UserViewModel
@{
    ViewData["Title"] = "用户新增";
}

<section class="content-header">
    <h1>
        User Manage
        <small>Add</small>
    </h1>
    <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-dashboard"></i> Level</a></li>
        <li class="active">Here</li>
    </ol>
</section>
<section class="content container-fluid">
    <div class="box box-primary">

        <form class="form-horizontal" method="post" asp-controller="User" asp-action="Add">
            <div class="box-body">
                <div asp-validation-summary="ModelOnly" class="help-block"></div>

                <div class="form-group">
                    <label class="col-sm-2 control-label" asp-for="Name"></label>
                    <div class="col-sm-10">
                        <input class="form-control" asp-for="Name">
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group">
                    <label class="col-sm-2 control-label" asp-for="EmpNo"></label>
                    <div class="col-sm-10">
                        <input class="form-control" asp-for="EmpNo">
                        <span asp-validation-for="EmpNo" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-sm-offset-2 col-sm-10">
                        <div class="checkbox">
                            <label>
                                <input type="checkbox" /> 是否使用
                            </label>
                        </div>
                    </div>
                </div>

                <div class="form-group">
                    <label asp-for="CreatePerson" class="col-sm-2 control-label"></label>
                    <div class="col-sm-10">
                        <input asp-for="CreatePerson" class="form-control" />
                        <span asp-validation-for="CreatePerson" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group">
                    <label asp-for="CreateDate" class="col-sm-2 control-label"></label>
                    <div class="col-sm-10">
                        <input asp-for="CreateDate" class="form-control" />
                        <span asp-validation-for="CreateDate" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group">
                    <label asp-for="ModifyPerson" class="col-sm-2 control-label"></label>
                    <div class="col-sm-10">
                        <input asp-for="ModifyPerson" class="form-control" />
                        <span asp-validation-for="ModifyPerson" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group">
                    <label asp-for="ModifyDate" class="col-sm-2 control-label"></label>
                    <div class="col-sm-10">
                        <input asp-for="ModifyDate" class="form-control" />
                        <span asp-validation-for="ModifyDate" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <div class="box-footer text-center">
                <a asp-controller="User" asp-action="List" class="btn btn-default pull-left">
                    <i class="fa fa-arrow-left"></i>
                    返回列表
                </a>
                <button type="reset" class="btn btn-default">重置</button>
                <button type="submit" class="btn btn-primary">提交</button>
            </div>
        </form>

    </div>
</section>

@section Scripts{
    @await Html.PartialAsync("_ValidationScriptsPartial")
}